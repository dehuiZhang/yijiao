/**index.wxss**/
.container{
  background:#000;
}
.tongji{
  width:100%;
  height:400rpx;
  background:#fff;
}
.new{
  color:#fff;
  font-size:40rpx;
  width:94%;
  height:200rpx;
  margin:0 3%;
  border-bottom:1px solid #fff;
}
.new_img{
  width:300rpx;
  height:180rpx;
  margin-top:10rpx;
  float:left;
}
.clear{
  clear:both;
}
.new_right{
  float:left;
  margin-left:20rpx;
  color:#fff;
  height:180rpx;
  margin-top:10rpx;
}
.new_title{
  font-size:32rpx;
  width:100%;
  height:40rpx;
}
.new_content{
  font-size:24rpx;

  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;

  width:100%;
  height:120rpx;
  line-height:40rpx;
}